// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  
}

datasource db {
 provider = "mysql"
  url      = env("DATABASE_URL")
 relationMode = "prisma"
}

model User {
  id              String           @id @default(cuid())
  username        String           @unique
  email           String           @unique
  password        String
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  projects Project[]
}
model Project{
  id String @id @default(cuid())
  name String 
  description String
  createdAt DateTime @default(now())
  user User @relation(fields: [userId],references: [id],onDelete: Cascade,onUpdate: Cascade)
  userId String
  keys ProjectKey[]
  @@index([userId])
}

model ProjectKey{
  id String @id @default(cuid())
  name String
  value String
  createdAt DateTime @default(now())
  relatedProject Project @relation(fields: [relatedProjectId],references: [id],onDelete: Cascade,onUpdate: Cascade)
  relatedProjectId String
    @@index([relatedProjectId])
}